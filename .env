# Database (default menggunakan SQLite di direktori yang sama)
SQLALCHEMY_DATABASE_URL="sqlite:///./app.db"

# JWT - Ganti SECRET_KEY ini dengan kunci rahasia Anda sendiri!
# Anda bisa membuat kunci baru dengan menjalankan: openssl rand -hex 32
SECRET_KEY=""
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
EXPIRED_ADMIN_TOKEN_DAYS=7
# SMTP Email (Contoh menggunakan Mailtrap, ganti dengan provider Anda)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Format: "requests/period". Contoh: "100/hour", "20/minute", "1/second"
RATE_LIMIT="10/hour"

# Ukuran maksimum file dalam Megabytes (MB)
MAX_FILE_SIZE_MB=3
# Milvus Vector Database
MILVUS_HOST="127.0.0.1"
MILVUS_PORT="19530"


# Rate limit untuk endpoint demo publik (lebih longgar dari produksi)
DEMO_RATE_LIMIT="20/minute"
